    return [
        'formregistration' => [
            'variables' => [
                'form' => NULL,
                'items' => [],
            ],
            'path' => $path,
            'template' => 'formregistration',
            'render element' => 'form'
        ],
        'list-register' => [
            'template' => 'list-register',
            'path' => $path,
            'variables' => [
                'items' => NULL,
                'title' => ''
            ],
        ],
    ];
}
